extends layout.pug

block content

    form(method="post" action="/shelves")
        input(type="hidden" name="_csrf" value=csrfToken)
        label Shelf Name
        input(type="text" name="name")
        button(type="submit") Create
    div.shelf Your Shelf
        each shelf in shelves
            a(href="/shelves/:shelvesId")= shelf
